<%- include("../partials/head.ejs") %>


        <head>
            <style>
                .form-group {
                    margin-bottom: 1rem;
                }
            </style>
        </head>

        <body>


    <%- include("../partials/sidebar.ejs", {user}) %>


    
            <div class="main-content-parent">

                <div class="container pt-5">
                    <h1>Create New Blog Post</h1>
                    <form action="/add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="title"
                                placeholder="Enter blog post title" required>
                        </div>
                        <div class="form-group">
                            <label for="thumbnail">Thumbnail:</label>
                            <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*">
                        </div>
                        <div class="form-group">
                            <label for="content">Content:</label>
                            <textarea class="form-control" id="content" name="content" rows="10"
                                placeholder="Write your blog post content" required></textarea>
                        </div>

                        <% const categories=[ "Lifestyle" , "Technology" , "Business" , "Entertainment" , "Science"
                            , "Parenting" , "Social Issues" , "Personal Development" , "Finance" ]; %>

                            <div class="form-group">
                                <label for="categories">Categories:</label>
                                <%categories.forEach(cat=> {%>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value=<%=cat %>
                                        name="categories[]">
                                        <label class="form-check-label" for="category_tech">
                                            <%= cat %>
                                        </label>
                                    </div>
                                    <%});%>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Post</button>
                    </form>
                </div>

            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
