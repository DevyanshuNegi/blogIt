<%- include("../partials/head.ejs") %>

    <%- include("../partials/sidebar.ejs") %>


        <div class="parent-div">



            <div class="blog-details-title text-light">
                <img class="blog-details-title-image" src=<%=blog.thumbnail %> alt=<%= blog.title %>>
                    <div class="m-5">

                        <div>
                            <h1>
                                <%= blog.title %>
                            </h1>
                        </div>
                        <div>

                            <p>
                                <i class="bi bi-activity"></i> views: <%= blog.views %>
                            </p>
                            <p class="d-flex">
                                <i class="bi bi-clock"></i> published on : <span class="format-date"><%= blog.createdAt %></span>
                            </p>
                        </div>
                    </div>
            </div>


            <div class="p-5 blog-details-content">
                <p>
                    <%= blog.content %>
                </p>
            </div>

            <div class="p-5 blog-details-comments">
                <h3>Comments</h3>
                <a class="btn btn-primary" href="/blogs/auth">SignIn to add comment</a>
                <hr>

                <% comments.forEach(comment=> { %>
                    <div class="my-4 mx-4">

                        <span>
                            <h5 class="d-inline">
                                @<%= comment.author.username %>
                            </h5>
                        </span>
                        <span class="blog-details-comment-date format-date">
                            <%= comment.createdAt %>
                        </span>
                        <p>
                            &emsp;<%= comment.content %>
                        </p>
                        

                    </div>
                    <% }) %>

            </div>

        </div>

        <%- include("../partials/foot.ejs") %>