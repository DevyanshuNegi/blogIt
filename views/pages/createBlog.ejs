        <body>


    <%- include("../partials/sidebar.ejs", {user}) %>


    
            <div class="main-content-parent">

                <div class="container pt-5">
                    <h1>Create New Blog Post</h1>
                    <form id="blog-post-form" action="/add" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog post title" required>
                        </div>
                        <div class="form-group">
                            <label for="thumbnail">Thumbnail:</label>
                            <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*">
                        </div>

                        <div class="form-group">
                            <label for="desc">Description :</label>
                            <input type="text" class="form-control" id="desc" name="desc" placeholder="1-2 line description" required>
                        </div>
                        
                        <!-- Quill Editor Container -->
                        <div class="form-group">
                            <div id="editor" class="bg-white">
                                <p>Hello World!</p>
                                <p>Write <strong>Blog</strong> content</p>
                                <p><br /></p>
                            </div>
                        </div>
                    
                        <!-- Hidden field to store the Quill content -->
                        <input type="hidden" id="content" name="content">
                    
                        <% const categories = ["Lifestyle", "Technology", "Business", "Entertainment", "Science",
                            "Parenting", "Social Issues", "Personal Development", "Finance"]; %>
                    
                        <div class="form-group">
                            <label for="categories">Categories:</label>
                            <% categories.forEach(cat => { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="<%= cat %>" name="categories[]">
                                    <label class="form-check-label" for="category_<%= cat %>">
                                        <%= cat %>
                                    </label>
                                </div>
                            <% }); %>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Post</button>
                    </form>
                    
                </div>

            </div>

