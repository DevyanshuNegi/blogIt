<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Blog Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-fvHhLMGUiimgsvKjfA4Uyi/+zYmW7CWUwHqQ9HdXGhwS//ECjF9zElbsvCUgxByTvv" crossorigin="anonymous">
    <style>
        .form-group {
            margin-bottom: 1rem;
        }

        .thumbnail-preview {
            width: 150px;
            height: 150px;
            border: 1px solid #ddd;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1>Create Blog Post</h1>
        <form>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title">
            </div>
            <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="10"
                    placeholder="Enter your blog content"></textarea>
            </div>
            <div class="form-group">
                <label for="category">Select Categories</label>
                <div class="form-check">
                    <script>
                        const categories = [
                            "Lifestyle", "Technology", "Business",
                            "Entertainment", "Science", "Parenting",
                            "Social Issues", "Personal Development", "Finance"
                        ];
                        categories.forEach(category => {
                            const checkbox = document.createElement('input');
                            checkbox.type = 'checkbox';
                            checkbox.classList.add('form-check-input');
                            checkbox.id = `category-${category}`;
                            checkbox.name = 'category[]'; // Allow multiple selections
                            checkbox.value = category;

                            const label = document.createElement('label');
                            label.classList.add('form-check-label');
                            label.htmlFor = `category-${category}`;
                            label.textContent = category;

                            const div = document.createElement('div');
                            div.classList.add('form-check');
                            div.appendChild(checkbox);
                            div.appendChild(label);

                            document.getElementById('category').appendChild(div);
                        });
                    </script>
                </div>
            </div>
            <div class="form-group">
                <label for="thumbnail">Thumbnail</label>
                <input type="file" class="form-control" id="thumbnail" name="thumbnail" accept="image/*">
                <img class="thumbnail-preview d-none" alt="Thumbnail Preview" />
            </div>
            <button type="submit" class="btn btn-primary">Create Blog</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OgwmRWzBJ8QqypiizUWDjfjQz6OmJYwONyCS+zWv5jlm9LfCWUdIPcv**YLns2tSWGlo7"
        crossorigin="anonymous"></script>
</body>

</html>